<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/primaryButtonRippleColor1">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryButtonRippleColor1"/>
            <stroke
                    android:width="0.1dip"
                    android:color="@color/black"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="90"
                    android:endColor="@color/primaryButtonRippleColor1"
                    android:startColor="@color/primaryButtonRippleColor2"
                    android:type="linear"/>
            <stroke
                    android:width="0.1dip"
                    android:color="@color/black"/>
        </shape>
    </item>
</ripple>